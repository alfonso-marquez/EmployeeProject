@model EmployeeProject.Models.UpdateEmployeeViewModel

@{
}
<h1 class="my-2">Edit Employee</h1>
<form method="post" action="View" class="mb-2">
    <div class="form-group">
        <label for="" class="form-label">ID</label>
        <input type="text" class="form-control" asp-for="Id" readonly>
        @*<small id="emailHelp" class="form-text text-muted">We'll never share your email with anyone else.</small>*@
    </div>
    <div class="form-group">
        <label for="" class="form-label">Name</label>
        <input type="text" class="form-control" asp-for="Name">
        @*<small id="emailHelp" class="form-text text-muted">We'll never share your email with anyone else.</small>*@
    </div>
    <div class="form-group">
        <label for="" class="form-label">Email Address</label>
        <input type="email" class="form-control" asp-for="Email">
        @*<small id="emailHelp" class="form-text text-muted">We'll never share your email with anyone else.</small>*@
    </div>
    <div class="form-group">
        <label for="" class="form-label">Salary</label>
        <input type="number" class="form-control" asp-for="Salary">
        @*<small id="emailHelp" class="form-text text-muted">We'll never share your email with anyone else.</small>*@
    </div>
    <div class="form-group">
        <label for="" class="form-label">Date of Birth</label>
        <input type="date" class="form-control" asp-for="DateofBirth">
        @*<small id="emailHelp" class="form-text text-muted">We'll never share your email with anyone else.</small>*@
    </div>
    <div class="form-group">
        <label for="" class="form-label">Department</label>
        <input type="text" class="form-control" asp-for="Department">
        @*<small id="emailHelp" class="form-text text-muted">We'll never share your email with anyone else.</small>*@
    </div>
    <div class="m-3">
        <button type="submit" class="mx-2 btn btn-primary">Update</button>
        <button type="submit" class="btn btn-danger"
                asp-action="Delete"
                asp-controller="Employees">
            Delete
        </button>
    </div>
    
</form>